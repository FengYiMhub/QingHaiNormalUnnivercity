<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_bg"
    android:orientation="vertical"
    >

<FrameLayout 
    android:id="@+id/bottom"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"

    android:paddingBottom="0dp"
    />

<RadioGroup
    android:id="@+id/tab"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="0dp"
    android:layout_gravity="center"
    >

    <RadioButton
        android:id="@+id/Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:button="@null"
        android:checked="true"
        android:background="@drawable/tab_selector_scene"
        android:drawablePadding="0dp"
        android:paddingBottom="0dp" />

    <RadioButton
        android:id="@+id/rbTravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:button="@null"
        android:background="@drawable/tab_selector_travel"
        android:paddingBottom="0dp" />

    <RadioButton
        android:id="@+id/rbBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:button="@null"
        android:background="@drawable/tab_selector_booking"
        android:paddingBottom="0dp" />

    <RadioButton
        android:id="@+id/rbMore"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:button="@null"
        android:background="@drawable/tab_selector_more"
        android:paddingBottom="0dp" />
</RadioGroup>

</LinearLayout>
   